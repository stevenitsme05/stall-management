html
	head
		// Here we import the asset files such as Bulma and FontAwesome.
		// You can use this out of the box. This btw, is an HTML comment
		// in Pug. This will appear in your browser when you render the
		// HTML.
		// Fonts and icons
		link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700,200|Open+Sans+Condensed:700', rel='stylesheet')
		link(href='https://use.fontawesome.com/releases/v5.0.6/css/all.css', rel='stylesheet')
		// CSS Files
		link(rel="stylesheet", href='/assets/now-ui/css/bootstrap.min.css')
		link(rel="stylesheet", href='/assets/now-ui/css/now-ui-kit.min.css')
		block headAddOns
	body
		block body
		script(src='/assets/now-ui/js/core/jquery.min.js', type='text/javascript')
		script(src='/assets/now-ui/js/core/popper.min.js', type='text/javascript')
		script(src='/assets/now-ui/js/core/bootstrap.min.js', type='text/javascript')
		// Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/
		script(src='/assets/now-ui/js/plugins/bootstrap-switch.js')
		// Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/
		script(src='/assets/now-ui/js/plugins/nouislider.min.js', type='text/javascript')
		// Plugin for the DatePicker, full documentation here: https://github.com/uxsolutions/bootstrap-datepicker
		script(src='/assets/now-ui/js/plugins/moment.min.js')
		// Plugin for Tags, full documentation here: https://github.com/bootstrap-tagsinput/bootstrap-tagsinputs
		script(src='/assets/now-ui/js/plugins/bootstrap-tagsinput.js')
		// Plugin for Select, full documentation here: http://silviomoreto.github.io/bootstrap-select
		script(src='/assets/now-ui/js/plugins/bootstrap-selectpicker.js', type='text/javascript')
		// Plugin for the DateTimePicker, full documentation here: https://eonasdan.github.io/bootstrap-datetimepicker/
		script(src='/assets/now-ui/js/plugins/bootstrap-datetimepicker.js', type='text/javascript')
		// Control Center for Now Ui Kit: parallax effects, scripts for the example pages etc
		script(src='/assets/now-ui/js/now-ui-kit.min.js', type='text/javascript')
		// Sharrre libray
		script(src='/assets/now-ui/demo/jquery.sharrre.js')
		// Plugin for Sweet Alert
		script(src='/assets/now-ui-admin/js/plugins/sweetalert2.min.js')
		block scriptAddOns